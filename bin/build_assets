#!/usr/bin/env bash

GENERATED_PATH=${GENERATED_PATH:-$PWD/static/generated}

mkdir -p $GENERATED_PATH

docker run --platform linux/amd64 \
     -v $PWD/_site:/site -v $PWD/static:/static  \
      surnet/alpine-wkhtmltopdf:3.15.0-0.12.6-small \
     /site/index.html --print-media-type --enable-local-file-access - > $GENERATED_PATH/cv.pdf

docker run --platform linux/amd64 \
     -v $PWD/_site:/tmp/site -v $GENERATED_PATH:/tmp/static \
     portown/alpine-pandoc:2.0.2 \
     pandoc -o /tmp/static/cv.docx -s /tmp/site/doc.html
